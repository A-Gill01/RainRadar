		<!--welcome-hero start -->
		<section id="home" class="welcome-hero" style="background-image: url(/images/welcome-hero/banner.jpg)">
			<div class="welcome-hero-txt">
				<h2>Rain Radar</h2>
				<%if (locals.dateValue) {%>
					<p><%=locals.locationData%></p>
				<%} else{%>
					<p>Please enter your address below:</p>
				<%}%>
			</div>
			
			<%if (locals.dateValue) {%>
				<div class="grid-container dataContainer animated fadeInDown">
					<div class="grid-item iconRender">
						<img src=<%=locals.mainIcon%> class="imageIcon">
					</div>
					<div class="grid-item tempRender">
						<h1>Current Temp:</h1>
						<h1 class="tempElement"><%=locals.currentTemp%> °C</h1>
					</div>
					<div class="grid-item statRender">
						<ul>
							<%for (let i = 0; i <= locals.statLength; i++) {%>
								<li class="statElements"><%=locals.statsArray[i]%></li>
							<%}%>
						</ul>
					</div>
					<div class="grid-item recMessage">
						<ul class="unorderedList">
							<%for (let i = 0; i <= locals.messageLength; i++) {%>
								<li class= "messageElements"><%=locals.messageArray[i]%></li>
							<%}%>
						</ul>
					</div>
				</div>

			<%}else{%>
				<div id="transitionBlock" class="animated fadeInDown">
					<div class="welcome-hero-form">
						<div class= "grid-container single-welcome-hero-form">
